{
  "extends": "airbnb",
  "ecmaVersion": 7,
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2,
    "max-len": [2, 80],
    "no-console": 0,
    "no-else-return": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-closing-bracket-location": [2, "after-props"],
    "no-use-before-define": 0,
    "new-cap": 0
  },
  "plugins": [
    "react"
  ]
}
